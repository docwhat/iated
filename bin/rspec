#!/usr/bin/env jruby

# Custom rake script, to automatically use bundler.

require 'rubygems'
require 'bundler/setup'

version = ">= 0"

if ARGV.first =~ /^_(.*)_$/ and Gem::Version.correct? $1 then
  version = $1
  ARGV.shift
end

gem 'rspec', version
load Gem.bin_path('rspec-core', 'rspec', version)
