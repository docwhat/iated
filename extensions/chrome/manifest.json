{
    "name": "It's All Text for Chrome",
    "version": "1.0",
    "description": "Allows for easy editing of TEXTAREAs via your favorite editor.",
    "background_page" : "background.html",
    "permissions": [
	"tabs",
	"contextMenus",
	"http://127.0.0.1/*"
    ],
    "content_scripts" : [
	{
	    "matches" : [ "<all_urls>" ],
	    "css" : [ "contentscript.css" ],
	    "js" : [ "jquery.js", "contentscript.js" ],
	    "all_frames" : true
	}
    ]
}